server {
  listen                <%= "#{@listen_address}:" if @listen_address %><%= @listen_port %>;

  server_name           <%= @server_name %> <%= @server_aliases.join(" ") %>;
  access_log            /var/log/nginx/<%= @server_name %>.access.log;

  location / {
    root  <%= @grafana_dir %>;
    index  index.html  index.htm;
  }

}
